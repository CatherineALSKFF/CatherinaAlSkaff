

<% layout('layouts/boilerplate') %>
<div class="my-1 mb-5">
  <% if (message) { %>
      <p><%= message %></p>
  <% } %>
  
  <div class="row" id="contact-section">
    <!-- Text Section -->
    <div class="col-md-4 mt-4" id="abouttext" data-aos="fade-right" data-aos-duration="1500">
        <span class="heading" id="abouttext">Send A Message.</span>
      <span class="subheading" id="abouttext">Feel free to Contact me by submitting the form below and I will get back to you as soon as possible
      Name</span>
    </div>

    <!-- Form Section -->
    <div class="col-md-8" data-aos="fade-left" data-aos-duration="1500">
        <div class="card">
        <form action="/contact" method="post">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" name="contact[name]" id="nameInput" placeholder="Type your Name">
            <label for="nameInput">Name</label>
          </div>

          <div class="form-floating mb-3">
            <input type="email" name="contact[email]" class="form-control" id="emailInput" placeholder="name@example.com">
            <label for="emailInput">Email address</label>
          </div>
        
          <div class="form-floating mb-3">
            <textarea class="form-control" name="contact[message]" id="messageInput" style="height: 10em" placeholder="Enter a message "></textarea>
            <label for="messageInput">Leave a message here</label>
          </div>
          <button type="submit" class="btn btn-outline-light contact-btn-form">Click To Send</button>
        </form>
      </div>
    </div>
  </div>
</div>
